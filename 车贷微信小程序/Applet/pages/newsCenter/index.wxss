page{
    height:100%;
}
scroll-view{
    height:100%;
}
.newsList{
    background: #fff;
    padding-left:60rpx;
}
.item{
    padding:20rpx 30rpx 20rpx 0;
    border-bottom:1px solid #eee;
    position: relative;
}
.item .time{
    float: right;
    color:#999;
    font-size:26rpx;
}

.item .desc{
    color:#999;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
     font-size:26rpx;
}
.item icon{
    position: absolute;
    width: 16rpx;
    height:16rpx;
    border-radius: 50%;
    background: #4e8dee;
    left:-30rpx;
    top:38rpx;
}
.loadOver{
    text-align: center;
    padding:20rpx;
    color:#4e8dee;
}
.noneList{
    padding:20px;
    text-align: center;
    color:#999;
}
