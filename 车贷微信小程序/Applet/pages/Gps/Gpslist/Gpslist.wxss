@import "/pages/template/preview/preview.wxss";
.notice{
    background: #fdfae5;
    color:#ec7307;
    height:75rpx;
    line-height: 75rpx;
    border-bottom:1px solid #efe6d4;
}
.notice text{
    color:#333;
}
.listBox{
    padding:20rpx 0;
    overflow: hidden;
}
.listBox .title{
    background: #fff;
    padding:10rpx;
    color:#ec7307;
}
.listmess{
    padding:10rpx;
}
.listBox .item{
    width: 50%;
    padding:20rpx 20rpx 0;
    float:left;
}
.carkey .item{
     padding:20rpx;
}

.pic{
    height:190rpx;
    line-height: 190rpx;
    text-align: center;
    border-radius: 10rpx;
    overflow: hidden;
    position: relative;
}
.picMark {
    position: absolute;
    width: 100%;
    height:100%;
    top:0;
    left:0;
    background: rgba(255,255,255,0.4);
}
.picMark text{
    display: inline-block;
    width: 98rpx;
    height:98rpx;
    background: #ff5000;
    text-align: center;
    color:#fff;
    line-height: 98rpx;
    border-radius: 50%;
}
.addPic{
    background: #fff;
}
.addPic icon{
    font-size:70rpx;
    color:#4e8dee;
}
.pic image{
    height:100%;
    width: 100%;
}
.text{
    text-align: center;
    padding:10rpx 0 0;
}

.box{height:700rpx;width:100%;background: #fff;position: fixed;left:0;bottom: -700rpx;padding: 0 20rpx;}
.box image{width:710rpx;height:407rpx;margin: 20rpx auto 0;display: block;}
.box text{font-size: 26rpx;color:#000;line-height:50rpx;}
.box button{width:100%;margin-top: 10rpx;}
.layer{position: fixed;top:0;left:0;width:100%;height:100%;background: rgba(0,0,0,.5);}
