@import "/pages/template/preview/preview.wxss";

.listBox{
    padding:20rpx;
    overflow: hidden;
}
.listmess{
    width: 50%;
    padding:20rpx 20rpx 0;
    float:left;
}

.pic{
    height:190rpx;
    line-height: 190rpx;
    text-align: center;
    border-radius: 10rpx;
    overflow: hidden;
    position: relative;
}
.picMark {
    position: absolute;
    width: 100%;
    height:100%;
    top:0;
    left:0;
    background: rgba(255,255,255,0.4);
}
.picMark text{
    display: inline-block;
    width: 98rpx;
    height:98rpx;
    background: #ff5000;
    text-align: center;
    color:#fff;
    line-height: 98rpx;
    border-radius: 50%;
}
.addPic{
    background: #fff;
}
.addPic icon{
    font-size:70rpx;
    color:#4e8dee;
}
.pic image{
    height:100%;
    width: 100%;
}
.text{
    text-align: center;
    padding:10rpx 0 0;
}
.tit{background:#fff;padding:10rpx 40rpx;}