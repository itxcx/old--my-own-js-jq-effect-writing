/**index.wxss**/
.indexWrap{position: relative;}
.indexHead{height:578rpx;overflow: hidden;}
.indexHead image{position:absolute;left:0;top:0;z-index: -1;width: 100%;height:578rpx;}
.headTit{display: block;font-size: 28rpx;color:#fff;text-align: center;margin-top: 156rpx;}
.headNum{display: block;font-size: 76rpx;color:#fff;text-align: center;margin-top: 10rpx;}
.headThree{margin-top: 82rpx;}
.headThree text{display: block;color:#fff;font-size: 28rpx;}
.sevenItem{background: #fff;margin-top: 30rpx;}
.sevenItem image{width:60rpx;}
.sevenItem text{display: block;font-size: 24rpx;color:#262626;}
.sevenItem navigator{text-align: center;width:25%;padding: 30rpx 0;}
.todo{background: #fff;margin: 30rpx 0;padding:14rpx 30rpx;position: relative;height:128rpx;box-sizing:border-box;}
.todo image{width:61rpx;height:61rpx;margin-top:10rpx;}
.todo .tit{font-size: 24rpx;color:#262626; white-space: nowrap;overflow:hidden;text-overflow: ellipsis;}
.todo .hour{font-size: 24rpx;color:#686868;padding-left:30rpx;}
.todo .rightA{width:12rpx;height:22rpx;}
.todo .list{padding-left:30rpx;}
.todo .dot{background:#ff3b30;width:20rpx;height:20rpx;border-radius: 50%;margin-right:10rpx;}
.todo .btn{
    margin-left:10rpx;
}
.todo .btn text{
    position: absolute;
    width: 30rpx;
    height:30rpx;
    line-height: 30rpx;
    border-radius: 50%;
    background: #f55549;
    color:#fff;
    text-align: center;
    font-size:20rpx;
    top:10rpx;
    right:10rpx;
}