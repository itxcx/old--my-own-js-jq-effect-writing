.picker-shadow{
   position: fixed;
   width: 100%;
   height:100%;
   top:0;
   left:0;
   background: rgba(0,0,0,0.3);
   z-index: 999998;
}
.picker-view {
    width: 100%;
    position: fixed;
    left: 0;
    bottom: -100%;
    background: #fff;
    z-index: 999999;
}
button{
    display: inline-block;
}
.addr-item {
    line-height:80rpx;
    text-align: center;
    font-size:28rpx;
}

.show {
    text-align: center;
    margin: 40rpx;
    height: 100rpx;
}
.choose {
    margin: 40rpx 0;
}
