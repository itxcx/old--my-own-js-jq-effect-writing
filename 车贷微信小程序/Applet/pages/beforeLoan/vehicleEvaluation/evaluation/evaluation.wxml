<!--pages/beforeLoan/vehicleEvaluation/evaluation.wxml-->
<view wx:if="{{errorMess!=''}}">
   <view animation="{{animationData}}" class='errorMess'>{{errorMess}}</view>
</view>
<view class="container">
<view class="input-box">
   <input type='text' placeholder='请输入手机号码' placeholder-class='c999'></input>
</view>
<view class="input-box ub ub-ac">
   <view class='ub-f1'>
   <input type='text' placeholder='请输入验证码' placeholder-class='c999'></input>
   </view>
   <view>
   <button type='primary-null'>获取验证码</button>
   </view>
</view>
<view class='btnBox'>
<button bindtap='nextStep' type="primary" disabled='{{btnStatus}}'>确定</button>
</view>
</view>
