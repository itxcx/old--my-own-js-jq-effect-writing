.listBox{
    padding:20rpx;
    overflow: hidden;
}
.listMess{
    width: 50%;
    padding:20rpx;
    float:left;
}
.pic{
    height:190rpx;
    line-height: 190rpx;
    text-align: center;
    border-radius: 10rpx;
    overflow: hidden;
    position: relative;
}
.addPic{
    background: #fff;
}
.addPic icon{
    font-size:70rpx;
    color:#4e8dee;
}
.pic image{
    height:100%;
    width: 100%;
}
.foot-btn{
    height:88rpx;
    line-height: 88rpx;
    border-top:1px solid #e6e6e6;
}
.foot-btn text{
    float:left;
    width: 50%;
    text-align: center;
    background: #fff;
    color:#4e8dee;
}
.foot-btn text:last-child{
    background: #e97c04;
    color:#fff;
}
.box{height:700rpx;width:100%;background: #fff;position: fixed;left:0;bottom: -700rpx;padding: 0 20rpx;}
.box image{width:710rpx;height:407rpx;margin: 20rpx auto 0;display: block;}
.box text{font-size: 26rpx;color:#000;line-height:50rpx;}
.box button{width:100%;margin-top: 10rpx;}
.layer{position: fixed;top:0;left:0;width:100%;height:100%;background: rgba(0,0,0,.5);}

swiper{
   height:500rpx;
}
swiper image{
    width: 100%;
    height:100%;
}
.swiperBox{
    position: absolute;
    height:100%;
    width: 100%;
    top:0;
    left:100%;
    background: rgba(0,0,0,0.4);
}