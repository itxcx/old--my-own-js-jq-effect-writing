.bw{filter: grayscale(100%);}
/* margin */
.mt20{margin-top:20rpx; }
.errorMess {
  position: fixed;
  top:0;
  width: 100%;
  z-index: 100;
  background: #f55549;
  color: azure;
  text-align: center;
  margin-bottom: 10rpx;
  height:0;
  overflow: hidden;
}
.errorMess text{
    display: inline-block;
    line-height: 80rpx;
}
.hasBottom{
    padding-bottom: 92rpx;
}

/*信息录入*/
.inputbox {
  background: #fff;
  border: 1px solid #e5e5e5;
  padding-left: 20rpx;
}
.inputbox view{
  position: relative;
}

.inputbox .ub {
  border-bottom: 1px solid #eee;
}

.inputbox .ub:last-child {
  border-bottom: 0;
}

.inputbox .ub input {
  height:88rpx;
  line-height: 88rpx;
  border: 0;
 display: block;
  overflow: hidden;
  text-overflow: ellipsis;
}
.inputbox .ub .name{
  line-height: 88rpx;
  height:100%;
  min-width: 160rpx;
}

.inputbox .ub .ub-f1 {
  position: relative;
}
.inputbox .ub .ub-f1 picker{
  line-height: 88rpx;
  color:#999;
}

.inputbox .ub .ub-f1 .iconfont {
  position: absolute;
  font-size: 40rpx;
  line-height: 88rpx;
  width: 88rpx;
  text-align: center;
  right: 0;
  top: 50%;
  margin-top:-44rpx;
  z-index: 10;
}
.inputbox .ub .ub-f1 .icon-icon04{
  color: #5396f2;
  width: 88rpx;
}
.inputbox .ub .ub-f1 text{
  display: block;
  word-break: break-all;
 word-wrap: break-word;
  padding:20rpx 88rpx 20rpx 0;
  line-height: 1.2;
  color:#444;
}
.inputbox .ub .ub-f1 text.mess{
  padding:0;
  line-height: 88rpx;
}
.inputbox .ub .ub-f1 .iconfont.more{
  color:#999;
  font-size:34rpx;
  line-height: 88rpx;
}
.inputbox .ub .chooseMore{
  width: 60%;
  height:88rpx;
  line-height:88rpx;
  color:#999;
}
.inputbox .ub .chooseMore .iconfont{
  color:#999;
  font-size:34rpx;
}
.inputbox .ub .flex .input{
  padding-left:20rpx;
  border-left:1px solid #eee;
}
.inputbox .ub .text{
  line-height: 88rpx;
  padding-right:20rpx;
}

/*信息展示*/
.messMain{
  background: #fff;
  padding:0 30rpx;
}
.messMain .messBox{
  line-height: 88rpx;
  border-bottom:1px solid #e5e5e5;
}
.messMain .messBox:last-child{
  border-bottom:0;
}
.messMain .messBox name{
  width: 200rpx;
}
.messMain .messBox .ub-f1{
  text-align: right;
  color:#999;
}
.messMain .messBox .piclist{
  padding:20rpx 0;
  overflow: hidden;
}
.messMain .messBox .piclist .item{
  width: 30%;
  float:left;
  margin:0 1.533%;
}
.messMain .messBox .piclist .item image{
  width: 100%;
}

.footBtn{
  height:98rpx;
  line-height: 98rpx;
  border-top:1px solid #e5e5e5;
}

/*swiper模板*/
.picPreview{
    position: fixed;
    z-index: 10;
    top:0;
    width: 100%;
    height:100%;
    background: rgba(0,0,0,0.3);
}
.picPreview .picBox{
    height:40%;
}
.picPreview .picBox swiper{
    height:100%;
}
.picPreview image{
    width: 100%;
}

/*错误信息提示*/
#errorPop{
    position: absolute;
    top:0;
    left:0;
    height:100%;
    width: 100%;
    background: none;
    z-index: 10;
    display: table;
}
#errorPop .errortext{
    display: table-cell;
    vertical-align: middle;
         text-align: center;
}
#errorPop .errortext text{
    display: inline-block;
    background: rgba(0,0,0,0.5);
    max-width: 60%; 
    color:#fff;
    padding:20rpx 40rpx;
     word-break: break-all;
     border-radius: 8rpx;
     -webkit-border-radius: 8rpx;
     font-size:28rpx;
     text-align: left;
}

